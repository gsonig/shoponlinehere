<% @body_id = 'signup' %>
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
<section id="form">
  <div class="col-md-6 col-md-offset-3">
    <div id="new-customer" class="login-form" data-hook="login">
      <h2 class="panel-title"><%= Spree.t(:new_customer) %></h2>
      <%= form_for resource, :as => :spree_user, :url => spree.registration_path(@user) do |f| %>
        <div data-hook="signup_inside_form">
          <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
          <%= f.submit Spree.t(:create), :class => 'btn btn-success btn-checkout' %>
        </div>
      <% end %>
      
      <%= Spree.t(:or) %> 
      <%= link_to Spree.t(:login_as_existing), spree.login_path %>
      <div data-hook="login_extras"></div>
    </div>
  </div>
</section>